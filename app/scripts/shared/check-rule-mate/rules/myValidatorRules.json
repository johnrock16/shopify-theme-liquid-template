{
    "name": {
        "validate": ["hasText"],
        "error": {
            "hasText": "common.hasText"
        },
        "docs": {
            "description": "Used to validate names based if they have text or not.",
            "notes": "You can add your special note here."
        }
    },
    "hasText": {
        "validate": ["hasText"],
        "error": {
            "hasText": "common.hasText"
        },
        "docs": {
            "description": "Used to validate if a text field is not blank."
        }
    },
    "email":{
        "regex": "/^[a-z0-9.]+@[a-z0-9]+\\.[a-z]+(\\.[a-z]+)?$/i",
        "validate": ["regex"],
        "error": {
            "regex": "email.regex"
        },
        "modifier": {
            "confirm": {
                "validate": ["regex", "equals"],
                "params": {
                    "equals": ["$email"]
                },
                "error": {
                    "regex": "email.regex",
                    "equals": "email.equals"
                },
                "docs": {
                    "description": "Used to validate if email confirm fields are valid emails and matches with the primary email field."
                }
            }
        },
        "docs": {
            "description": "Used to validate email fields. Checking if hasText and if matches with a valid format for emails.",
            "notes": "To use email confirm modifier use email--confirm"
        }
    },
    "phone":{
        "regex": "/^[0-9]{4}-[0-9]?[0-9]{4}$/",
        "validate": ["regex"],
        "error": {
            "regex": "phone.regex"
        },
        "docs": {
            "description": "Checks if phone number has a valid format.",
            "notes": "Only works for Brazilian's phone numbers"
        }
    },
    "date": {
        "regex": "/^\\d{4}[\/\\-](0?[1-9]|1[012])[\/\\-](0?[1-9]|[12][0-9]|3[01])$/",
        "validate": ["regex", "validDate"],
        "error": {
            "regex": "common.dateFormat",
            "validDate": "date.validDate"
        },
        "modifier": {
            "age": {
                "validate": ["regex", "validateAge"],
                "params": {
                    "validateAge": [18, 130]
                },
                "error": {
                    "regex": "common.dateFormat",
                    "validateAge": "date.validateAge"
                }
            }
        },
        "docs": {
            "description": "Used to validate a date format in date or string fields",
            "notes": "Can validate someone age based on birthdate through the date--age modifier"
        }
    },
    "cpf":{
        "validate": ["cpf"],
        "error": {
            "cpf": "cpf.cpf"
        },
        "docs": {
            "description": "Used to check if someone CPF is valid or not",
            "notes": "CPF is a ID document which only works in Brazil"
        }
    }
}
